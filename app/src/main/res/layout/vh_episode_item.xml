<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vh_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/vh_quote_padding_horizontal"
    android:paddingTop="@dimen/vh_quote_padding_vertical"
    android:paddingEnd="@dimen/vh_quote_padding_horizontal"
    android:paddingBottom="@dimen/vh_quote_padding_vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/VhItemTitle"
        android:textColor="@color/light_green_six"
        tools:text="Episode" />

    <TextView
        android:id="@+id/txt_season"
        style="@style/VhItemMeta"
        android:layout_marginTop="@dimen/vh_item_txt_meta_margin_top"
        tools:text="Season" />

    <TextView
        android:id="@+id/txt_air_date"
        style="@style/VhItemMeta"
        android:layout_marginTop="@dimen/vh_item_txt_meta_margin_top"
        tools:text="Air Date" />

    <TextView
        android:id="@+id/txt_actors"
        style="@style/VhEpisodeItemMeta"
        android:layout_marginTop="@dimen/vh_item_txt_meta_margin_top"
        tools:text="Actors" />

    <TextView
        android:id="@+id/txt_series"
        style="@style/VhItemMeta"
        android:layout_marginTop="@dimen/vh_item_txt_meta_margin_top"
        tools:text="Series" />

</LinearLayout>
