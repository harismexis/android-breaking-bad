<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTxtv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="VhItemTitle" parent="BaseTxtv">
        <item name="android:textSize">@dimen/vh_item_title_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="VhItemMeta" parent="BaseTxtv">
        <item name="android:textSize">@dimen/vh_item_meta_text_size</item>
    </style>

    <style name="ItemDetailTitle" parent="BaseTxtv">
        <item name="android:textSize">@dimen/item_detail_title_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="ItemDetailLabel" parent="BaseTxtv">
        <item name="android:textSize">@dimen/item_detail_label_text_size</item>
        <item name="android:textColor">@color/yellow_one</item>
    </style>

    <style name="ItemDetailMeta" parent="BaseTxtv">
        <item name="android:textSize">@dimen/item_detail_meta_text_size</item>
    </style>

    <style name="ToolbarText" parent="BaseTxtv">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">@color/grey_nine</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>