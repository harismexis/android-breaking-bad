<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarText" parent="BaseTxtv">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">@color/grey_nine</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseTxtv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="VhItemTxtv" parent="BaseTxtv">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/vh_bbcharacter_txt_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/vh_bbcharacter_txt_margin_horizontal</item>
    </style>

    <style name="VhItemTitle" parent="VhItemTxtv">
        <item name="android:textSize">@dimen/vh_bbcharacter_title_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="VhItemMeta" parent="VhItemTxtv">
        <item name="android:textSize">@dimen/vh_bbcharacter_meta_text_size</item>
    </style>

    <style name="DetailTxtv" parent="BaseTxtv">
        <item name="android:layout_marginStart">@dimen/bbcharacter_detail_txtv_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/bbcharacter_detail_txtv_margin_horizontal</item>
    </style>

    <style name="ItemDetailTitle" parent="DetailTxtv">
        <item name="android:textSize">@dimen/bbcharacter_detail_title_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="ItemDetailLabel" parent="DetailTxtv">
        <item name="android:textSize">@dimen/bbcharacter_detail_label_text_size</item>
        <item name="android:textColor">@color/green_five</item>
    </style>

    <style name="ItemDetailMeta" parent="DetailTxtv">
        <item name="android:textSize">@dimen/bbcharacter_detail_meta_text_size</item>
    </style>

</resources>